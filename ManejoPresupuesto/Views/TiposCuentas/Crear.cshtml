@model TipoCuenta

@{
    ViewData["Title"] = "Crear Tipo Cuenta";
}

<h1 class="text-center"> Crear tipo Cuenta </h1>

<h5 class="mt-5"> 
    El tipo de cuenta se refiere a como podemos agrupar cuentas.
    Ejemplos : Prestamos, Tarjetas de credito, etc.
</h5>

<!-- All = va a mostrar todos los errores -->
<!-- modelOnly va a mostrar los errores mostrados en el modelo -->

<div class="container">

 <div asp-validation-summary="ModelOnly" class="text-danger"></div>
 
<form asp-controller="TiposCuentas" asp-action="Crear">


        <div class="mb-3">
            <label asp-for="Nombre" class="form-label">Nombre</label>
            <input type="text" asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Enviar</button>
</form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}

